---
import { Image } from "astro:assets";

interface Tech {
    name: string
    icon: string
}

interface TechStack {
    name: string
    technologies: Tech[]
}

const { technologies, name } = Astro.props
---

<article class="bg-neutral-800 p-4 rounded-md w-full hover:bg-[#2a2a2a] transition-colors duration-75 ease-in-out">
    <h4 class="text-2xl font-bold text-neutral-400">{name}</h4>
    <ul class="w-full gap-10 flex flex-wrap place-items-center items-center justify-center p-6">
        { technologies.map((tech: Tech) => <li><Image src={`/technologies/${tech.icon}`} width={200} height={200} loading="lazy" class="inline w-[70px] h-[70px]" alt={tech.name} /></li>) }
    </ul>
</article>