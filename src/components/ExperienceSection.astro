---
import Separator from "./Separator.astro";
import type { Experience as exp } from "../interfaces/Experience";
import Experience from "./Experience.astro";

interface Props {
  experience: exp[];
  title: string;
}

const { experience, title } = Astro.props;
---

<section class="max-w-[900px] mx-auto mt-12" id="experience">
  <Separator />
  <h2 class="text-3xl font-bold text-gray-300 mb-4">{title}</h2>
  <ol class="relative border-s-2 border-purple-600">
    {experience.map((exp) => (
      <Experience {...exp}  />
    ))}
  </ol>
</section>
